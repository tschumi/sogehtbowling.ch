        // Copyright Section
        div.copyright.py-4.text-center.text-white
            .container
                .small Theme based on Freelancer by Startbootstrap
                .small This website is made with <i class="fas fa-heart fa-sm fa-fw text-danger"></i> and fairy dust in Switzerland
                .small &copy; 2024 sogehtbowling.ch

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script(src='js/scripts.js')

